#!/bin/bash
set -u -e
BORG=/usr/local/bin/borg
export BORG_REPO={{ borg_repo }}
export BORG_PASSPHRASE='{{ borg_pass }}'
export BORG_REMOTE_PATH=borg1
export BORG_RSH='ssh -i /root/.ssh/borg -oBatchMode=yes'

systemctl stop teleput

$BORG create --compression zstd,5 ::'Teleput_{now:%Y-%m-%d_%H%M}' \
  /opt/src/teleput/teleput.sqlite

$BORG prune --prefix 'Teleput_' --keep-daily=3 --keep-weekly=1 --keep-monthly=1

systemctl start teleput
