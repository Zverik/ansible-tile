#!/bin/bash
set -u -e
BORG=/usr/local/bin/borg
export BORG_REPO={{ borg_repo }}
export BORG_PASSPHRASE='{{ borg_pass }}'
export BORG_REMOTE_PATH=borg1
export BORG_RSH='ssh -i /root/.ssh/borg -oBatchMode=yes'

DBDUMP=/var/tmp/geoscribble.sql
pg_dump -U phpbb --format=c --file=$DBDUMP geoscribble

$BORG create --compression zstd,5 ::'Geoscribble_{now:%Y-%m-%d_%H%M}' $DBDUMP

$BORG prune --prefix 'Geoscribble_' --keep-daily=7 --keep-weekly=2 --keep-monthly=3

rm $DBDUMP
