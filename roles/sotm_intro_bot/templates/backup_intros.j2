#!/bin/bash
set -u -e
BORG=/usr/local/bin/borg
export BORG_REPO={{ borg_repo }}
export BORG_PASSPHRASE='{{ borg_pass }}'
export BORG_REMOTE_PATH=borg1
export BORG_RSH='ssh -i /root/.ssh/borg -oBatchMode=yes'

systemctl stop sotm_intro_bot

$BORG create --compression zstd,5 ::'SotmIntro_{now:%Y-%m-%d_%H%M}' \
  /opt/src/sotm_intro_bot/intros.sqlite

$BORG prune --prefix 'SotmIntro_' --keep-daily=7 --keep-weekly=2 --keep-monthly=3

systemctl start sotm_intro_bot
